  "version": "0.2.0",
  "configurations": [
      {
          "name": "Application API",
          "type": "go",
          "request": "attach",
          "mode": "remote",
          "debugAdapter": "dlv-dap",
          "port": 2345,
          "substitutePath": [
              {
                  "from": "${workspaceFolder}/api",
                  "to": "/go/src/api"
              },
          ],
          "postDebugTask": "remove debug_bin"
      }
  ]
}